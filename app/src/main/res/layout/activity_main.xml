<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EAEC"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/partnerIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@mipmap/pcon" android:layout_alignParentStart="true"
        android:layout_above="@+id/returnButton"/>
    <TextView
            android:id="@+id/partnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courgette_regular"
            android:gravity="center"
            android:text="Your Partner"
            android:textColor="#ffa834"
            android:textSize="22sp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="152dp"
            android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="23dp"
        android:adjustViewBounds="false"
        android:background="@drawable/next"
        android:cropToPadding="false"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/next" />

    <ImageView
        android:id="@+id/user_Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        android:contentDescription="@string/user_Circle"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/circle" />

    <ImageView
        android:id="@+id/partner_Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:contentDescription="partner_Circle"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/partner_circle"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:src="@mipmap/ucon" android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/userText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courgette_regular"
            android:gravity="center"
            android:text="You"
            android:textSize="22sp" android:layout_alignParentStart="true" android:layout_above="@+id/userIcon"
            android:layout_marginBottom="-115dp" android:textColor="#d757f6"/>

</RelativeLayout>